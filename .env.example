# Thai-specific Settings
THAI_NEWS_API_KEY=your-api-key-here
THAI_CORPUS_PATH=/path/to/corpus

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Performance
NUM_WORKERS=4
USE_GPU=true